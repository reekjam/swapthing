<h2>Your events:</h2>
<ul>
  <% if @events.blank? %>
    <p>You have yet to create a event. Click <%= link_to 'here', new_event_path %> to get the event started.</p>
  <% else %>
    <% @events.each do |event| %>
      <li>
        <%= "#{event.name}" %> | <%= link_to 'Edit', edit_event_path(event) %> | <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  <% end %>
</ul>
<%= link_to 'Add New event', new_event_path %>
