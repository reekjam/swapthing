 <div id='events'>
  <% if @events.blank? %>
    <p>You have yet to create a event. Click <%= link_to 'here', new_event_path %> to get the event started.</p>
  <% else %>
    <% @events.each do |event| %>
    <div class='event u-full-width'>
      <div class='event-date'>
        <span><%= event.date.strftime('%b %d %Y') %></span>
      </div>
      <div class='event-name'>
        <span><%= event.name %></span>
      </div>
      <div class='event-description six columns'>
        <span><%= event.description %></span>
      </div>
      <div class='six columns'>
        <div class='actions'>
          <div class='four columns'>
            <span><%= link_to 'Edit', edit_event_path(event) %></span>
          </div>
          <div class='four columns'>
            <span><%= link_to 'Users', event_users_path(event.id) %></span>
          </div>
          <div class='four columns'>
            <span><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <div class='add-new'>
      <span><%= link_to 'Add New Event', new_event_path, class: 'button' %></span>
    </div>
  </div>
  <% end %>
</div>
