<h2>Add Event</h2>
<div class='card long'>
  <div class='twelve columns form_container'>
    <div class='fields_container'>
    <%= simple_form_for @event, url:{ action: 'create' } do |f| %>
      <%= f.input :admin_id, as: :hidden, input_html: { value: current_user.id } %>
      <%= f.input :name, label: false, placeholder: 'Name' %>
      <%= f.input :description, label: false, placeholder: 'Details' %>
      <%= f.input :date, as: :string, label: false, placeholder: 'Event Date' %>
      <%= f.input :max_spend, label: false, placeholder: 'Spending Cap' %>
      <%= f.submit 'Add Event', class: 'button-primary' %>
    <% end %>
    </div>
  </div>
</div>