<h2><%= @event.name %></h2>
<ul>
  <li><%= @event.description %></li>
  <% unless @event.max_spend.blank? %>
    <li><%= @event.max_spend %></li>
  <% end %>
  <li><%= @event.date.strftime("%B %d, %Y") %></li>
  <% if @partnership && @partnership.getter.wishlist%>
    <li><%= link_to "#{@partnership.getter.fname}'s Wishlist", wishlist_path(@partnership.getter.wishlist.id) %></li>
  <% end %>
</ul>
<%= link_to 'Edit Event', edit_event_path(@event) %>
