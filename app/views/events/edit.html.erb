<h2>Edit Event Details</h2>
  <div class='twelve columns form_container'>
    <div class='fields_container'>
    <%= simple_form_for @event do |f| %>
      <%= f.label :name, 'Event Name' %>
      <%= f.input_field :name, label: false, placeholder: 'My Great Event' %>

      <%= f.label :description, 'Description' %>
      <%= f.input_field :description, label: false, placeholder: 'Our annual gift exchange' %>      

      <%= f.label :date, 'Date' %>
      <%= f.input_field :date, as: :string, label: false, placeholder: '01/01/15', 
                  value: f.object.date.strftime("%m/%d/%y") %>

      <%= f.label :max_spend, 'Spending Limit' %>
      <%= f.input_field :max_spend, label: false, placeholder: '50' %>

      <%= f.submit class: 'button-primary' %>
    <% end %>
    </div>
  </div>

  <% if @event.partnerships.present? %>
  <div class='tabled_view'>
    <p class='subheader'>Partnerships</p>
    <table>
      <% @event.partnerships.each do |partnership| %>
      <tr>
        <td><%= partnership.giver.full_name %></td>
        <td><%= partnership.getter.full_name %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <% end %>
