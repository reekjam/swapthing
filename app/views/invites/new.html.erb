<h2>Invite someone</h2>
<table class='u-full-width'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= simple_form_for @invite, url: {action: 'create'} do |f| %>
<%= f.input :email %>
<%= f.submit 'Invite' %>
<% end %>