<!DOCTYPE html>
<html>
<head>
  <title>Swapthing</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<ul class='navigation'>
<% if user_signed_in? %>
  <li><%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %></li>
  <li>Hi, <%= current_user.fname %>!</li>
  <li><%= link_to 'Events', events_path %>
  <% if current_user.wishlist.blank? %>
    <li><%= link_to 'Create Wishlist', new_user_wishlist_path(current_user.id) %></li>
  <% else %>
    <li><%= link_to 'My Wishlist', edit_user_wishlist_path(current_user.id, current_user.wishlist.id) %>
  <% end %>
<% else %>
  <li><%= link_to 'Sign Up', new_user_registration_path %></li>
  <li><%= link_to 'Sign In', new_user_session_path %></li>
<% end %>
</ul>

<%= yield %>

</body>
</html>
