<!DOCTYPE html>
<html>
<head>
  <title>Swapthing</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
  <% [:error, :notice].each do |key| %>
    <% unless flash[key].blank? %>
      <div class=<%= "#{key.to_s}-top" %>>
        <%= flash[key] %>
      </div>
      <% break %>
    <% end %>
  <% end %>
  <div class='st-wrapper'>
    <%= render 'layouts/mobile_menu' %>
      <nav class='navbar'>
        <div class='container'>
          <ul class='navbar-list'>
          <% if user_signed_in? %>
            <li class='navbar-menu'>Menu</li>
            <li class='navbar-item'><%= link_to "Hi, #{current_user.fname}!", edit_user_registration_path(current_user.id), class: 'navbar-link' %></li>
            <li class='navbar-item'><%= link_to 'Events', events_path, class: 'navbar-link' %>
            <% if current_user.wishlist.blank? %>
              <li class='navbar-item'><%= link_to 'Create Wishlist', new_user_wishlist_path(current_user.id), class: 'navbar-link' %></li>
            <% else %>
              <li class='navbar-item'><%= link_to 'My Wishlist', edit_user_wishlist_path(current_user.id, current_user.wishlist.id), class: 'navbar-link' %>
            <% end %>
            <li class='navbar-item'><%= link_to 'Sign Out', destroy_user_session_path, method: 'delete', class: 'navbar-link' %></li>
          <% end %>
          </ul>
        </div>
      </nav>
    <%= yield %>

  </div>
</body>
</html>
