<h2>Edit Profile</h2>
<div class='card long'>
  <div class='twelve columns form_container'>
    <div class='fields_container'>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.input :fname, label: false, placeholder: 'First Name' %>
        <%= f.input :lname, label: false, placeholder: 'Last Name' %>
        <%= f.input :email, label: false, placeholder: 'Email' %>
        <%= f.input :password, label: false, placeholder: 'New Password' %>
        <%= f.input :password_confirmation, label: false, placeholder: 'Retype New Password' %>
        <%= f.submit class: 'button-primary' %>
      <% end %>
    </div>
  </div>
</div>