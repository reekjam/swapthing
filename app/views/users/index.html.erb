<h2>Event Participants</h2>
<% unless @event.partnerships.blank? %>
<p class='hint left'>
  Click <%= link_to 'here', event_partnerships_path %> if you need to view your event's partnerships
</p>
<% end %>

<ul>
  <%= render 'invite_users', event: @event %>
  <%= render 'shuffle_partners' %>

  <div class='twelve columns'>
    <% @users.each do |user| %>
    <li class='three columns card'>
      <div class='primary'><%= content_tag(:i, nil, class: 'fa fa-user fa-10x') %></div>
      <div class='secondary'>
        <p><%= user.full_name %></p>
      </div>
    </li>
    <% end %>
    <% @pending_users.each do |pending_user| %>
    <li class='three columns card pending'>
      <div class='primary'><%= content_tag(:i, nil, class: 'fa fa-user fa-10x') %></div>
      <div class='secondary'>
        <p>Pending</p>
        <p><%= pending_user.email %></p>
      </div>
    </li>
    <% end %>
  </div>
</ul>
