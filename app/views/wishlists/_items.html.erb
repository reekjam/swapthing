<ul>
  <div class='three columns'>
    <%= link_to new_user_wishlist_item_path(wishlist_id: params[:id]) do %>
    <li class='card'>
      <div class='prod_image'>
        <span class='no_image'><%= content_tag(:i, nil, class: 'fa fa-plus-circle fa-10x') %></span>
      </div>
      <div class='prod_info'>
        <span class='add_new'>Add Item</span>
      </div>
    </li>
    <% end %>
  </div>
<% @wishlist.items.each do |item| %>
  <div class='three columns'>
    <li class='card'>
      <a href=<%= item.url unless item.url.blank? %> >
        <div class='prod_image'>
          <% if item.image.present? %>
            <span class='image'><%= image_tag item.image(:thumb) %></span>
          <% else %>
            <span class='no_image'><%= content_tag(:i, nil, class: 'fa fa-gift fa-10x') %></span>
          <% end %>
          <div class='prod_price'><%= number_to_currency item.price, precision: 0 %></div>
        </div>
      </a>
      <div class='prod_info'>
        <div class='prod_source'><%= item.short_url if item.url.present? %></div>
        <div class='prod_name'><%= item.name %></div>
        <div class='prod_notes'><%= item.notes %><div>
      </div>
      <%= @wishlist.show_edit_link item %>
    </li>
  </div>
<% end %>
</ul>