<h2>Edit Item</h2>
<%= simple_form_for @item, url: user_wishlist_item_path do |f| %>
  <%= f.label 'Name' %>
  <%= f.input :name, label: false %>
  <%= f.label 'Description' %>
  <%= f.input :description, as: :text, label: false %>
  <%= f.label 'Price' %>
  <%= f.input :price, label: false %>
  <%= f.label 'Notes' %>
  <%= f.input :notes, as: :text, label: false %>
  <%= f.label nil, 'URL' %>
  <%= f.input :url, label: false %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back to Wishlist', edit_user_wishlist_path(params[:user_id], params[:wishlist_id]) %>